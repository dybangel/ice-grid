.main{
	width: 100%;
  height: 100vh;
	display: inline-block;
  background: #f2f2f2;
}
.main .allPan{
  width: 100%;
  height: auto;
  float: left;
}
.main .allPan .leftPan{
  width: 50%;
  height: 28vh;
  line-height: 35px;
	background: #44a2e2;
  float: left;
  text-align: center;
  border-right: 1px solid #fff;
  padding: 43px 0;
}
.main .allPan .leftPan .h1{
  width: 100%;
	font-size: 1.2rem;
	color: #fff;
	text-align: center;
}
.main .allPan .leftPan .h2{
  color: #fff;
  font-size: 12px;
}
.main .allPan .rightPan{
  width: 50%;
  background: #44a2e2;
  height: 28vh;
  float: left;
  text-align: center;
}
.main .allPan .rightPan .imgfl{
  width: 75px;
  height: 60px;
  margin: 6px 36% 0 36%; 
  float: left; 
}
.main .allPan .rightPan .imgfl .img{
  width: 100%;
  height: 60px;
}
.main .allPan .rightPan .rightday{
  width: 100%;
  text-align: center;
  color: #fff;
  display: inline-block;
  font-size: 14px;
}
.main .allPan .rightPan .day1{
  width: 100%;
  height: 20px;
  display: inline-block;
  font-size: 12px;
  text-align: center;
  color: #fff;
}

.main .h4{
  width: 100%;
	font-size: 1.2em;
	color: #44a2e2;
	text-align: center;
  height: 4vh;
	line-height: 4vh;
	background: #f1faff;
  float: left;
  background: #f2f2f2;
}
.main .moneylist{
	width: 100%;
  height: auto;
	float: left;
}
.main .moneylist .ul{
	width: 100%;
	display: inline-block;
}
.main .moneylist .ul .li{
	width: 33.33%;
	background: #fff;
	float: left;
	text-align: center;
	font-weight: bold;
	line-height: 5vh;
	padding: 10px 0;
}
.main .moneylist .ul .li .h2{
	font-size: 1.6em;
}
.main .moneylist .ul .li .h5{
	font-size: 1.2em;
	color: #ed1c24;
}
.main .tips{
  width: 100%;
  color: #999;
  height: 42px;
  display: inline-block;
  position: relative;
  line-height: 20px;
}
.main .tips .one{
  width: 100%;
  height: 20px;
  display: inline-block;
  font-size: 1em;
}
.main .mtext{
	width: 100%;
  height: 42px;
	display: inline-block;
	background: #fff;
  position: relative;
}

.main .mtext .h5{
	font-size: 1.3em;
	float: left;
  padding-left: 20px;
}
.main .mtext text{
  display: block;
  float: left;
  line-height: 42px;
}
.main .mtext button{
	font-size: 1.4em;
	color: #fff;
	background: #44a2e2;
	border: 0;
  width: 80px;
  border-radius: 0;
  float: right;
}
.main .mlist{
	width: 100%;
  height: auto;
	display: inline-block;
  margin-top: 12px;
}
 .main .mlist .ul{
	width: 100%;
  height: auto;
	display: inline-block;
}
.main .mlist .ul .li{
	width: 100%;
  height: 40px;
  line-height: 40px;
	background: #fff;
	float: left;
  padding-left: 20px;
}
.main .mlist .ul .li .h2{
	font-size: 1.3em;
	float: left;
}

.main .mlist .ul .li icon{
	float: right;
	color: #999;
	font-size: 1.3em;
	font-weight: bold;
  padding-right: 15px;
} 
#moneyInput{
  width: 100px;
  float: left;
  font-size: 15px;
  height: 42px;
  position:relative;
}
.modalClass{
  border-radius: 5px;
}
.input_modal{
  border-style: none;
  height: 40px;
  width: 100%;
  border: 1px solid #999;
  text-indent: 20px;
  outline: none;
  border-radius: 10px;
  padding-left: 10px;
}
.input_modal2{
  border-style: none;
  height: 40px;
  width: 100%;
  border: 1px solid #999;
  text-indent: 20px;
  outline: none;
  border-radius: 10px;
  margin-top: 10px;
  padding-left: 10px;
}
.backBtn{
  width: 90%;
  height: 42px;
  margin: 10px 5%;
  float: left;
  font-size: 1.4em;
  color: #fff;
  background: #44a2e2;
  border: 0;
}
 
 /* 获取用户信息授权 */
.getUserInfo{
  width: 94vw;
  position: fixed;
  top: 28vh;
  left: 3vw;
  background: #fff;
  border-radius: 4px;
  padding: 16px;
  z-index: 9;
}
.getUserInfo .userInfoTips{
  width: 100%;
  display: inline-block;
  margin-bottom: 12px;
}
.getUserInfo .userInfoTips image{
  width: 46px;
  height: 46px;
  float: left;
}
.getUserInfo .userInfoTips text {
  width: calc(100% - 46px);
  float: left;
  padding-left: 12px;
  box-sizing: border-box;
}
.getUserInfo .userInfoTips text.tipsTop{
  font-size: 16px;
  color: #666666;
}
.getUserInfo .userInfoTips text.tipsP{
  font-size: 12px;
  color: #999999;
  margin-top: 2px;
}
.getUserInfo .grandBtn{
  width: 90%;
  float: left;
  margin: 0 5%;
  height: 42px;
  font-size: 16px;
  border-radius: 4px;
  color: #ffffff;
  background: rgb(26,175,25);
}
.getUserInfo-bg{
  width: 100vw;
  height: 100vh;
  position: fixed;
  z-index: 8;
  background: rgba(0,0,0,0.5);
}
.serviceClass{
  color: #44a2e2;
  margin-left: 20px;
}
.modalClass{
  border-radius: 20px;
  height: 300px;
  position: absolute;
  top: 10px;
}
.input_modalCode{
  border-style: none;
  height: 40px;
  width: 90%;
   border: 1px solid #999;
   text-indent: 20px;
   outline: none;
   border-radius: 10px;
  top: 0;
  left: 0;
   padding-left: 10px;
  
}
