.main{
	width: 100%;
	display: inline-block;
}
.news{
	width: 100%;
	display: inline-block;
	padding: 2vw 4vw;
}
.news .nh2{
	font-size: 1em;
	color: #999;
	text-align: right;
}
.news .circle{
	width: 5px;
	height: 5px;
	background: #ff0000;
	border-radius: 50%;
	display: inline-block;
	top: -0.5vw;
	margin-right: 4px;
	position: relative;
}
.infrom{
	width: 100%;
	height: 73px;
	display: inline-block;
}
.infrom .nli{
	width: 100%;
	display: inline-block;
	background: #fff;
	margin-bottom: 15px;
}
.infrom .nli .infromtext{
	width: calc(70% - 24px);
	display: inline-block;
	margin: 12px;
}
.infrom .nli .infromtext .nh2{
	font-size: 1.2em;
	font-weight: bold;
}
.infrom .nli .infromtext .circle-two{
	width: 8px;
	height: 8px;
	background: #ff0000;
	border-radius: 50%;
	float: left;
	position: relative;
	top: 4px;
	margin-right: 6px;
}
.infrom .nli .infromtext .circle-two2{
	width: 8px;
	height: 8px;
	background: #fff;
	border-radius: 50%;
	float: left;
	position: relative;
	top: 4px;
	margin-right: 6px;
}
.infrom .nli .infromtext .np{
	font-size: 0.8em;
	color: #999;
	padding: 10px 0 0 14px;
	line-height: 12px;
  float: left;
}
.infrom .nli .time{
	width: calc(30% - 24px);
	float: right;
	display: inline-block;
	text-align: center;
	margin: 30px 0;
}
.infrom .nli .time .na{
	font-size: 0.8em;
}
.infrom .nli .time view{
  display: block;
	color: #999;
	font-weight: bold;
  float: right;
}